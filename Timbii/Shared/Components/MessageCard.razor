<div class="message-card">
    <p>
        <MessageBubbleTail IsMine=@(Message.Sender == User ? true : false) />
        @Message.Text
    </p>
    <aside>@Message.Timestamp.ToShortTimeString()</aside>
</div>

@code {
    [CascadingParameter] User? User { get; set; }
    [Parameter] public Message Message { get; set; }

    // need logic for handling long strings
}