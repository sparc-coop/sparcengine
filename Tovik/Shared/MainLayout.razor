@inherits LayoutComponentBase

<NavMenu Page=@slug OnPageChanged=PageChanged />

<main>
    <div class="main-grid">
        <div class="hero">
            <div class="hero-img">
                <PrimaryLogo FontColor="#FF945E" />
            </div>
            <div class="hero-background"><DashedLine Color="#FFD4BF" /></div>
        </div>
        @Body
    </div>
</main>

@code {
    string slug = "/";

    protected override void OnInitialized()
    {
        slug = Nav.Uri.Substring(Nav.BaseUri.Length - 1).ToLower();
    }

    void PageChanged (string page)
    {
        slug = page;
    }
}